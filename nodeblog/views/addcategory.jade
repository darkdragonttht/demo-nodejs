extends layout

block content
    h1=title
    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}
    form(method='post', action='/categories/add')
        .form-group
            label Title:
            input.form-control(name='title', type='text', placeholder='Nhập tên chuyên mục')
        input.btn.btn-success(name='submit', type='submit', value='Save')