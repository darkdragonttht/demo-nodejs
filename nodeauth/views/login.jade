extends layout

block content
    h1 Login
    p Please login below
    form(method='post', action='/users/login')
        .form-group
            label Username
            input.form-control(name='username', type='text', placeholder='Nhập tên tài khoản')
        .form-group
            label Password
            input.form-control(name='password', type='password', placeholder='Nhập mật khẩu')
        input.btn.btn-success(name='submit', type='submit', value='Đăng nhập')